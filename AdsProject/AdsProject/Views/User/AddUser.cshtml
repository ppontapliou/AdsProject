@model UI.Models.User

@using Models.Models
@{ ViewData["Title"] = "Добавить пользователя"; }

<h2>Добавить пользователя</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddUser" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <span class="text-danger">
                    @ViewBag.Message
                </span>
            }
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password"  class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Mail" class="control-label"></label>
                <input asp-for="Mail" class="form-control" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <label asp-for="Role" class="control-label"></label>
            <select class="form-select mb-3" asp-for="Role">
                @foreach (Roles role in (Roles[])Enum.GetValues(typeof(Roles)))
                {
                    <option value="@((int)role)">@role</option>
                }
            </select>
            <div class="form-group">
                <input type="submit" value="Добавить пользователя" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
