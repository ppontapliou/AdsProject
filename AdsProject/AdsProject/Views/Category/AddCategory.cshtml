@using Models.Models
@model UI.Models.Category

@{
    ViewData["Title"] = "Добавить категорию";
}
<h2>Добавление категории</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCategory" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <span class="text-danger">
                    @ViewBag.Message
                </span>
            }
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="Name" class="control-label">Введите название категории</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Добавить категорию" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>    